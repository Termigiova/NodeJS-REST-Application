<!DOCTYPE html>
<html lang="en">
<head>
    {{> head}}
</head>
<body>
<div class="container">

    {{> navbar}}

    <div class="row">

        <div class="btn-group">
            <a id="btn-create" class="btn btn-success" href="/movies/post">Crear Película</a>
        </div>

    </div>

    <div class="row">

        <!-- List -->
        <br>
        <div class=col-md-12>

            <form id="form-list-movie">
                <legend>Peliculas</legend>

                <table class="table table-bordered table-condensed table-hover">
                    <thead>
                    <tr>
                        <td>Titulo</td>
                        <th>Año</th>
                        <th>IMDb</th>
                        <th>Tipo</th>
                        <th>Administrar</th>
                    </tr>

                    </thead>
                    <tbody id="form-list-movie-body">
                    {{#each movie}}
                        <tr>
                            <td>{{title}}</td>
                            <td>{{year}}</td>
                            <td>{{imdb}}</td>
                            <td>{{type}}</td>
                            <td>
                                <a title="view" class="btn btn-default btn-sm " href="/movies/show/{{id}}"> <i class="glyphicon glyphicon-eye-open text-primary"></i> </a>
                                <a title="edit" class="btn btn-default btn-sm " href="/movies/update/{{id}}"> <i class="glyphicon glyphicon-edit text-primary"></i> </a>
                                <a title="delete" class="btn btn-default btn-sm" href="/movies/delete/{{id}}"> <i class="glyphicon glyphicon-trash text-danger"></i> </a>
                            </td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </form>

        </div>

    </div>
</div>

{{> scripts}}

</body>
</html>
