<!DOCTYPE html>
<html lang="en">
<head>
    {{> head}}
</head>
<body>
<div class="container">

    {{> navbar}}

    <div class="row">

        <!-- View -->
        <div class="col-md-12">

            <legend>Detalles de la pelicula</legend>

            <div >

                <div class2=" col-md-9 col-lg-9 ">
                    <table class="table table-user-information">
                        <tbody>
                        <tr>
                            <td>Titulo:</td>
                            <td>{{movie.title}}</td>
                        </tr>
                        <tr>
                            <td>AÃ±o:</td>
                            <td>{{movie.year}}</td>
                        </tr>
                        <tr>
                            <td>Clasificacion:</td>
                            <td>{{movie.rated}}</td>
                        </tr>
                        <tr>
                            <td>Estreno:</td>
                            <td>{{movie.released}}</td>
                        </tr>
                        <tr>
                            <td>Duracion:</td>
                            <td>{{movie.runtime}}</td>
                        </tr>
                        <tr>
                            <td>Paises:</td>
                            <td>{{movie.countries}}</td>
                        </tr>
                        <tr>
                            <td>Generos:</td>
                            <td>{{movie.genres}}</td>
                        </tr>
                        <tr>
                            <td>Director:</td>
                            <td>{{movie.director}}</td>
                        </tr>
                        <tr>
                            <td>Escritores:</td>
                            <td>{{movie.writers}}</td>
                        </tr>
                        <tr>
                            <td>Actores:</td>
                            <td>{{movie.actors}}</td>
                        </tr>
                        <tr>
                            <td>Trama:</td>
                            <td>{{movie.plot}}</td>
                        </tr>
                        <tr>
                            <td>Poster:</td>
                            <td>{{movie.poster}}</td>
                        </tr>
                        <tr>
                            <td>IMDb:</td>
                            <td>
                                <ul>
                                    <li>Rating: {{movie.imdb.rating}}</li>
                                    <li>Votes: {{movie.imdb.votes}}</li>
                                </ul>
                            </td>
                        </tr>
                        <tr>
                            <td>Tomato:</td>
                            <td>
                                <ul>
                                    <li>Meter: {{movie.tomato.meter}}</li>
                                    <li>Consensus: {{movie.tomato.consensus}}</li>
                                    <li>Image: {{movie.tomato.image}}</li>
                                    <li>Rating: {{movie.tomato.rating}}</li>
                                    <li>Reviews: {{movie.tomato.reviews}}</li>
                                    <li>Fresh: {{movie.tomato.fresh}}</li>
                                    <li>User meter: {{movie.tomato.userMeter}}</li>
                                    <li>User Rating: {{movie.tomato.userRating}}</li>
                                    <li>User Reviews: {{movie.tomato.userReviews}}</li>
                                </ul>
                            </td>
                        </tr>
                        <tr>
                            <td>Metacritic:</td>
                            <td>{{movie.metacritic}}</td>
                        </tr>
                        <tr>
                            <td>Premios:</td>
                            <td>
                                <ul>
                                    <li>Nominations: {{movie.awards.nominations}}</li>
                                    <li>Wins: {{movie.awards.wins}}</li>
                                    <li>Text: {{movie.awards.text}}</li>
                                </ul>
                            </td>
                        </tr>
                        <tr>
                            <td>Tipo:</td>
                            <td>{{movie.type}}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>

                <div class="btn-group">
                    <a id="btn-update" class="btn btn-success" href="/movieDetails/update/{{movie.id}}">Actualizar</a>
                    <a id="btn-delete" class="btn btn-success" href="/movieDetails/delete/{{movie.id}}">Eliminar</a>
                </div>
                
            </div>

        </div>

        {{> footer}}
    </div>
</div>

{{> scripts}}

</body>
</html>
